export XDG_CURRENT_DESKTOP="i3"
export TERM="xterm-256color"
# Used for enabling formatting for text, including colors
export GROFF_NO_SGR=0

# Set directories where commands can be run from without specifying their full paths.
export PATH=$PATH/bin
export PATH=$HOME/.local/bin:$PATH
export PATH=$PATH:/usr/local/go/bin

if [[ -d "/usr/local/ludde" ]]; then
    export PATH=$PATH:/usr/local/ludde
fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Aliases
alias ls="lsd"
alias ll="lsd -ahl"
alias cls="clear"
alias grep="grep --color=always"
alias ip4="ip -c -p -h -br -f inet a"
alias ip6="ip -c -p -h -br -f inet6 a"
alias mysql="mariadb --skip-ssl"
alias nn="newnote"
alias umountmedia="sudo umount /mnt/media"

# Colored man pages
export MANPAGER="less -R --use-color -Dd+r -Du+b"

# Colored less
export LESS="-R --use-color -Dd+r -Du+b"

# Start xorg display manager
if [[ -z $DISPLAY ]] && [[ $(tty) == /dev/tty1 ]]; then
   startx 
fi
